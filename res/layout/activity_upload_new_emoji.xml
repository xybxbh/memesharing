<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.etc.emoji.UploadNewEmojiActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_weight="5" >

        <ImageView
            android:id="@+id/imgNewEmoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_register1" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edtUploadNew"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@drawable/style"
        android:ems="10"
        android:hint="介绍" >

        <requestFocus />
    </EditText>
    
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="350dp" 
        android:layout_weight="1">

        <Button
            android:id="@+id/btnUploadNewBack"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_register"
            android:onClick="back"
            android:text="返回" 
            android:textColor="@color/main_top_color"/>

        <Button
            android:id="@+id/btnUploadNew"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_register"
            android:onClick="upload"
            android:text="上传"
            android:textColor="@color/main_top_color" />

    </LinearLayout>


</FrameLayout>

